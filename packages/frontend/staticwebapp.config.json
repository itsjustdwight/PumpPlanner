{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/api/*", "/css/*"]
    },
    "routes": [
      {
        "route": "/api/{*any}",
        "rewrite": "/api/{any}",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/assets/*.*",
        "serve": "/public/*.*"
      },
      {
        "route": "/*.{html,css,js}",
        "rewrite": "/index.html"
      }
    ],
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html",
        "statusCode": 200
      }
    },
    "mimeTypes": {
      ".json": "text/json",
      ".css": "text/css"
    }
  }